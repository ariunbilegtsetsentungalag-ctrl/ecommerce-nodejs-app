<%- include('include/header') %>
<style>
  .product-card {
    height: 100%;
    display: flex;
    flex-direction: column;
    box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    border-radius: 8px;
    transition: transform 0.3s ease;
  }
  
  .product-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 4px 16px rgba(0,0,0,0.15);
  }
  
  .product-image {
    width: 100%;
    height: 250px;
    object-fit: cover;
    border-top-left-radius: 8px;
    border-top-right-radius: 8px;
  }
  
  .product-body {
    flex-grow: 1;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    padding: 20px;
  }
  
  .product-name {
    font-size: 18px;
    font-weight: bold;
    margin-bottom: 10px;
    color: #333;
    height: 50px;
    overflow: hidden;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
  }
  
  .product-description {
    color: #666;
    font-size: 14px;
    margin-bottom: 15px;
    height: 60px;
    overflow: hidden;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
  }
  
  .product-price {
    font-size: 20px;
    font-weight: bold;
    color: #e74c3c;
    margin-bottom: 15px;
  }
  
  .product-actions {
    display: flex;
    gap: 10px;
    align-items: center;
  }
  
  .btn-add-cart {
    flex: 1;
    background: #28a745;
    color: white;
    border: none;
    padding: 10px;
    border-radius: 5px;
    font-weight: bold;
    transition: background 0.3s ease;
  }
  
  .btn-add-cart:hover {
    background: #218838;
  }
  
  .btn-details {
    background: #007bff;
    color: white;
    padding: 10px 15px;
    border-radius: 5px;
    text-decoration: none;
    font-weight: bold;
    transition: background 0.3s ease;
  }
  
  .btn-details:hover {
    background: #0056b3;
    color: white;
    text-decoration: none;
  }
  
  .row-equal-height {
    display: flex;
    flex-wrap: wrap;
  }
  
  .col-equal-height {
    display: flex;
    margin-bottom: 30px;
  }
</style>

<div class="container py-4">
  <h2 class="text-center mb-4">Shop</h2>
  <div class="row row-equal-height">
    <% products.forEach(p => { %>
      <div class="col-md-3 col-sm-6 col-equal-height">
        <div class="card product-card">
          <img src="/images/<%= p.image %>" class="product-image" alt="<%= p.name %>">
          <div class="product-body">
            <div>
              <h5 class="product-name"><%= p.name %></h5>
              <p class="product-description"><%= p.description %></p>
              <p class="product-price">$<%= p.basePrice ? p.basePrice.toFixed(2) : p.price.toFixed(2) %></p>
            </div>
            <div class="product-actions">
              <form action="/cart/add" method="POST" style="flex: 1;">
                <input type="hidden" name="productId" value="<%= p.id %>">
                <button type="submit" class="btn-add-cart">Add to Cart</button>
              </form>
              <a href="/product/<%= p.id %>" class="btn-details">Details</a>
            </div>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
</div>
<%- include('include/footer') %>