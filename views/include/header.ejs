<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <title><%= title || 'Shop' %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/main.css">
  <style>
    body { padding-top: 0; }
    .navbar { position: sticky; top: 0; z-index: 1000; }
  </style>
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <div class="container">
    <a class="navbar-brand" href="/">Simple Shop</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarContent">
      <% if (locals.userId) { %>
        <ul class="navbar-nav me-auto">
          <li class="nav-item"><a class="nav-link" href="/shop">Shop</a></li>
          <li class="nav-item"><a class="nav-link" href="/cart">My Bag</a></li>
          <li class="nav-item"><a class="nav-link" href="/order-history">History</a></li>
        </ul>
        <div class="d-flex">
          <span class="navbar-text me-3">Welcome, <%= locals.username %></span>
          <a href="/logout" class="btn btn-outline-light">Logout</a>
        </div>
      <% } else { %>
        <div class="ms-auto">
          <a href="/login" class="btn btn-outline-light me-2">Login</a>
          <a href="/signup" class="btn btn-light">Sign Up</a>
        </div>
      <% } %>
    </div>
  </div>
</nav>

<div class="container mt-3">
  <% if (locals.error && locals.error.length > 0) { %>
    <% locals.error.forEach(function(msg) { %>
      <div class="alert alert-danger"><%= msg %></div>
    <% }) %>
  <% } %>
  
  <% if (locals.success && locals.success.length > 0) { %>
    <% locals.success.forEach(function(msg) { %>
      <div class="alert alert-success"><%= msg %></div>
    <% }) %>
  <% } %>
</div>

<!-- Load Bootstrap JavaScript -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>